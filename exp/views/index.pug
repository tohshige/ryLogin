extends layout

block content
  .ui.segment
    h1= title
    p Welcome to #{title} | ようこそ#{title}へ
    p test user is >> #{CREDS1.test.username} | テストアカウント





  .ui.text.container
    h4.ui.top.attached.block.header screenshots
    .ui.attached.segment

      a(href="/screenshots/").ui.inverted.blue.button 
        i.photo.icon 
        span スクリーンショットフォルダ

      a(href="/users/removeSS").ui.animated.fade.button(tabindex='0')
        .visible.content 
          i.trash.icon 
          span スクリーンショットフォルダ
        .hidden.content
          | ファイルを削除して空にする
    
    h4.ui.attached.block.header buttons ( today is : #{MonthDay} )
    .ui.attached.segment

      a(href="/users/kuroko").ui.inverted.red.animated.button(tabindex='0')
        .visible.content 
          span ( kuroko : #{CREDS1.kuroko.date} )クリックで楽天CSV
            i.right.arrow.icon 
        .hidden.content
          span ダウンロード申請
            i.down.arrow.icon 

      .ui.section.divider

      a(href="/users/sjapan").ui.inverted.red.animated.button(tabindex='0')
        .visible.content 
          span ( sjapan : #{CREDS1.sj.date} )クリックで楽天CSV
            i.right.arrow.icon 
        .hidden.content
          span ダウンロード申請
            i.down.arrow.icon 

      .ui.section.divider

      a(href="/users/test").ui.inverted.red.animated.button(tabindex='0')
        .visible.content 
          span ( test : #{CREDS1.test.date} )クリックで楽天CSV
            i.right.arrow.icon 
        .hidden.content
          span ダウンロード申請
            i.down.arrow.icon 

    h4.ui.attached.block.header accounts
    .ui.attached.segment
      - var count = 0 
      - var cred = CREDS1;
      for i, index in CREDS1
        - count ++
        p #{index} : #{i['username']} : #{i['date']}

    h4.ui.bottom.attached.block.header total account :  #{count}


