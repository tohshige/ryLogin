extends layout

block content
  //- .ui.container.aligned.center.aligned.grid(style="margin-top:50px;")
  .ui.container.grid(style="margin-top:50px;")
    .column
      h2.ui.blue.image.header
        //- img.image(src='assets/images/logo.png')
        .content
          | Yahoo & Rakuten API  #{itemId}
          br.pcNone
          | ItemSearch
      p Enterキーは無効です。入力後[検索]をクリック thisPageViewFile > /ryLogin/exp/views/yahooApi.pug

      .ui.stacked.segment.form
        .three.fields
          .field
            h4 ショップID
            form
              //- .ui.icon.input
                input#shopId(type='text', value='shopjapan' ,placeholder='shopId')
                i.circular.search.icon
              //- input#buttonq(type='button', value='送信').ui.button
            select#select.ui.dropdown(name='gender')
              option(value='shopjapan') shopjapan
              option(value='kuroko') kuroko
              option(value='levisstore') levisstore
          .field
            h4 商品URL,商品IDから検索
            form.inline
              .ui.icon.input.ten.wide.field
                //- - if itemId 
                //- -    var value = itemId
                - var value = (itemId)?itemId:'trcs-dss';
                //- - else
                //- -    var value = 'trcs-dss'
                //- p v #{value}  i #{itemId}
                input#goodsq(type='text', value=value ,placeholder='item url 商品URL')
                i.circular.search.icon
              input#buttonq(type='button', value='Yahoo検索').ui.button
          .field
            h4 商品名から検索(日本語可)
            form
              .ui.icon.input.sixteen.wide.field
                input#goods(type='text', value='ナイス')
                i.circular.search.icon
              input#button(type='button', value='Yahoo検索').ui.button
              input#buttonR(type='button', value='rakuten検索').ui.button
              input#buttonBoth(type='button', value='両方検索').ui.button.primary
              .ui.toggle.checkbox
                input(type='checkbox'  )
                label 在庫無し(販売不可)も含める
              //- .ui.toggle.checkbox#itemCode
              //-   input(type='checkbox'  )
              //-   label アイテムコードで検索

      //- .ui.stackable.two.column.grid#contentR
      .ui.stacked.segment.form
        .two.fields
          .field
            a.ui.red.circular.label Y  
            span ahoo
            #content
          .field
            a.ui.red.circular.label R  
            span#rResult akuten
            #contentR

              //- .ui.toggle.checkbox
              //-   input#toggle-1(type='checkbox', name='public')
              //-   label.dn(for='toggle-1', data-content='OFF')
              //-   |     Tax Features
              //- .ui.checkbox
              //-   input(type='checkbox', name='fun')
              //-   label Checkbox

        //- #content
        script(src='https://code.jquery.com/jquery-3.2.1.min.js')
        script(src='/test/yapi.js')
